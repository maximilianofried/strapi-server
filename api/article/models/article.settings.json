{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "articles"
    },
    "slug": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "archive"
      ]
    },
    "comments": {
      "via": "article",
      "collection": "comment"
    }
  }
}
